{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "make clean"
    },
    {
      "label": "build",
      "type": "shell",
      "dependsOn": [
        "clean"
      ],
      "command": "make kernel.iso",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "run",
      "dependsOn": [
        "build"
      ],
      "type": "shell",
      "command": "make run"
    },
    {
      "label": "debug",
      "dependsOn": [
        "build"
      ],
      "type": "shell",
      "command": "make debug",
      "isBackground": true
    }
  ]
}